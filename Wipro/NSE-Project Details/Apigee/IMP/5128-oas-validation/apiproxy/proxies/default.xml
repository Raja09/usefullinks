<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request/>
        <Response/>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="getNodes">
            <Description>Returns list of existing nodes.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="createNode">
            <Description>Create a new node.</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="getNode">
            <Description>Return details for an existing node.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes/*") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="updateNode">
            <Description>Update an existing node/organization.</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes/*") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="patchNode">
            <Description>Update an existing node.</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes/*") and (request.verb = "PATCH")</Condition>
        </Flow>
        <Flow name="deleteNode">
            <Description>Delete an existing node.</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/nodes/*") and (request.verb = "DELETE")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/example/v1</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default"/>
</ProxyEndpoint>