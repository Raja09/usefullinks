<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description>OAuth proxy</Description>
    <PreFlow name="PreFlow">
        <Request>
            <!--<Step>-->
            <!--    <Name>EV-RequestParams</Name>-->
            <!--</Step>-->
            <!--<Step>-->
            <!--    <Name>RF-InvalidClientCredentials</Name>-->
            <!--    <Condition>(client_id = " ") OR (client_secret = " ")</Condition>-->
            <!--</Step>-->
            <Step>
                <Condition>(request.header.Content-type != "application/x-www-form-urlencoded")</Condition>
                <Name>RF-InvalideContent</Name>
            </Step>
            <Step>
                <Name>JS-ValidateRequest</Name>
            </Step>
            <!-- <Step>
                <Name>EV-ExtractRequestPayload</Name>
            </Step>
            <Step>
                <Name>AM-SetVariables</Name>
            </Step>-->
            <Step>
                <Condition>(error = "true")</Condition>
                <Name>RF-ValidateRequestParamError</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="GetAccessToken">
            <Description>Generate Access Token</Description>
            <Request>
                <Step>
                    <Name>GenerateAccessToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/token")</Condition>
        </Flow>
        <Flow name="RefreshToken">
            <Description>Generate Access token using Refresh Token</Description>
            <Request>
                <Step>
                    <Name>RefreshToken</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/refreshToken")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response>
            <Step>
                <Name>EV-UserInfo</Name>
            </Step>
            <Step>
                <Name>AM-SetOAuthResponse</Name>
            </Step>
        </Response>
    </PostFlow>
    <FaultRules>
        <FaultRule name="InvalidRefreshToken">
            <Condition>(response.status.code &gt;= 400)</Condition>
            <Step>
                <Name>AM-DefaultError</Name>
            </Step>
        </FaultRule>
    </FaultRules>
    <DefaultFaultRule name="df-error">
        <Step>
            <Name>AM-DefaultError</Name>
        </Step>
    </DefaultFaultRule>
    <HTTPProxyConnection>
        <BasePath>/oauth</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <!--<RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>-->
    <RouteRule name="noroute"/>
</ProxyEndpoint>