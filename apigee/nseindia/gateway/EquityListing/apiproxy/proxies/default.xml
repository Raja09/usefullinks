<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
	<PreFlow name="PreFlow">
		<Request>
			<!-- <Step>
				<Name>FC-Security</Name>
			</Step> -->
		</Request>
		<Response />
	</PreFlow>
	<Flows>
		<Flow name="getIssuerDetailsUsingGET">
			<Description>Get all site visit details for issuer</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/details/issuer/*") and (request.verb = "GET")</Condition>
		</Flow>
		<Flow name="getSiteVisitDetailsUsingGET">
			<Description>Get all site visit details for issuer</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/details/*") and (request.verb = "GET")</Condition>
		</Flow>
		<Flow name="saveQuestionAnswerDraftUsingPUT">
			<Description>Draft save site visit question answers</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/draft/sitevisitform") and (request.verb = "PUT")</Condition>
		</Flow>
		<Flow name="saveQuestionAnswerCommentUsingPUT">
			<Description>Save comment for undesired valued question</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/question/comment") and (request.verb = "PUT")</Condition>
		</Flow>
		<Flow name="raiseClarificationRequestUsingPUT">
			<Description>Raise clarification request</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/request/clarification") and (request.verb = "PUT")
			</Condition>
		</Flow>
		<Flow name="getRoDetailsUsingGET">
			<Description>Retrieve regional office details</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/ro") and (request.verb = "GET")</Condition>
		</Flow>
		<Flow name="updateSiteRoDetailsUsingPUT">
			<Description>Update regional office details for site</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/ro") and (request.verb = "PUT")</Condition>
		</Flow>
		<Flow name="getRoDetailsByPinCodeUsingGET">
			<Description>Retrieve regional office details from pincode
			</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/state/*") and (request.verb = "GET")</Condition>
		</Flow>
		<Flow name="saveQuestionAnswerUsingPOST">
			<Description>Submit Site visit question answers</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/submit/sitevisitform") and (request.verb = "POST")
			</Condition>
		</Flow>
		<Flow name="initiateSiteVisitUsingPUT">
			<Description>Initiate site visit request</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/visit/initiate") and (request.verb = "PUT")</Condition>
		</Flow>
		<Flow name="getSiteVisitDetailUsingGET">
			<Description>Get site details</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/visit/*") and (request.verb = "GET")</Condition>
		</Flow>
		<Flow name="saveSiteVisitDetailsUsingPOST">
			<Description>Add new site for issuer</Description>
			<Request>
                <!--<Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>-->
            </Request>
			<Response />
			<Condition>(proxy.pathsuffix MatchesPath "/site/*") and (request.verb = "POST")</Condition>
		</Flow>
	</Flows>
	<PostFlow name="PostFlow">
		<Request />
		<Response />
	</PostFlow>
	<HTTPProxyConnection>
		<BasePath>/v1/listing</BasePath>
		<VirtualHost>secure</VirtualHost>
	</HTTPProxyConnection>
	<RouteRule name="default">
		<TargetEndpoint>default</TargetEndpoint>
	</RouteRule>
</ProxyEndpoint>