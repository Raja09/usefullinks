<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>FC-Security</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <Flows>
        <Flow name="saveReleaseSecuritiesUsingPOST">
            <Description>Save Release Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesRelease") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="getReleaseSecuritiesUsingGET">
            <Description>Get Release Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesReleaseSummary") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="validateReleaseSecuritiesRequestUsingPOST">
            <Description>Validate Release Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesReleaseValidation") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="saveTransferSecuritiesUsingPOST">
            <Description>Save Transfer Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesTransfer") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="getTransferSecuritiesSummaryUsingGET">
            <Description>Get Transfer Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesTransferSummary") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="validateTransferSecuritiesRequestNew1UsingPOST">
            <Description>Validate Transfer Securities Details</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/securitiesTransferValidation") and (request.verb = "POST")</Condition>
        </Flow>
        <!--  Request Details Controller -->
        <Flow name="ModifyTheCollateralRequestStatus">
            <Description>Modify the Collateral Request status</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/requests") and (request.verb = "PUT")</Condition>
        </Flow>
        <Flow name="DeleteTheCollateralRequestStatus">
            <Description>Delete Collateral Request status</Description>
            <Request>
                <Step>
                    <Name>JS-ValidateRequest</Name>
                </Step>
            </Request>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/requests") and (request.verb = "DELETE")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <HTTPProxyConnection>
        <BasePath>/v1/collateral</BasePath>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>